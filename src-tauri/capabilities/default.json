{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/.steam/**",
        "$HOME/.local/share/Steam/**",
        "/home/*/.steam/**",
        "/home/*/.local/share/Steam/**"
      ]
    }
  ]
}
